<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainbg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="Rishabh ChatGPT"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="150dp"

            app:srcCompat="@drawable/logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="4dp"
            android:gravity="center"
            android:text="Rishabh ChatGPT is an artificial intelligence chatbot developed by Rishabh and released in June 2023."
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="normal"/>





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="40dp"

        android:gravity="center"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:id="@+id/chatWithBot"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/backgroud">

            <ImageView
                app:tint="@color/white"
                android:layout_width="36dp"

                android:layout_height="36dp"
                android:src="@drawable/online_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Chat with Bot"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/generateImage"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/backgroud" >

            <ImageView
                app:tint="@color/white"
                android:layout_width="36dp"

                android:layout_height="36dp"
                android:src="@drawable/voicetoimg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Generate Image"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="180dp"


        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_gravity="center"
        android:layout_marginTop="95dp"
        app:cardCornerRadius="20dp">


<LinearLayout
    android:background="@drawable/backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capabilities and Limitations"
        android:layout_marginTop="5dp"

        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remembers what user said earlier in the conversation"
       android:layout_marginLeft="8dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allows user to provide follow-up corrections"
        android:layout_marginLeft="8dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trained to decline inappropriate requests"
        android:layout_marginLeft="8dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="May occasionally generate incorrect information"
        android:layout_marginLeft="8dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>











</LinearLayout>













    </androidx.cardview.widget.CardView>




















</LinearLayout>